    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Attach to Chrome",
            "port": 3000,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome (autre port)",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Entreprise CSV to JSON",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/maj_data/entreprise/entreprisecsvtojson.js",
            "args": [
                "${workspaceFolder}/maj_data/entreprise/fichier_propre.csv"
            ],
            "console": "integratedTerminal"
        }
    ]
}